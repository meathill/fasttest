.test-items
  display: flex
  flex-wrap: wrap
  width: 828px
  margin 0 auto

  .test-item-title
    margin-bottom: 9px
    line-height: 1.5

  .test-item-starts
    margin: 0
    display: flex

  @media (max-width 575px)
    padding 0 15px

.test-item
  background-color: white
  box-shadow: 0 1px 6px #F2F4FC
  display: flex
  flex-direction column
  margin 0
  padding 0 20px
  justify-content: center

  @media (max-width 575px)
    border-radius: 9px
    font-size: 12px
    width calc((100vw - 30px -10px) / 2)
    height 62px

    &:nth-child(2n)
      margin-left: 10px

    &:nth-child(n + 3)
      margin-top: 10px

  @media (min-width 576px)
    border-radius: 14px
    width: 260px
    height: 92px
    margin-right: 24px

    &:nth-child(3n)
      margin-right: 0

    &:nth-child(n + 4)
      margin-top: 24px

  &.error
    background-color #f8d7da
    box-shadow 0 0 4px rgba(#842029, .25)

    .test-item-title
      position relative

      &::after
        color #842029
        content 'Ã—'
        font-size 1.5em
        font-weight bold
        margin-left 1em
        position absolute
        top -.4em
        left -1.65em

.star
  background url(../../assets/star0.png) no-repeat
  background-size: cover
  display: block
  transition: background .25s

  &.light
    background-image: url(../../assets/star1.png)

  for n in 2..5
    &:nth-child({n})
      $delay = (n - 1) * 0.125s
      transition-delay: $delay

  @media (max-width 575px)
    width 12px
    height 12px

    + .star
      margin-left: 8px

  @media (min-width 576px)
    width 18px
    height 18px

    + .star
      margin-left: 12px
