.result
  margin auto
  min-height: 420px

.score
  background-color: white
  box-shadow: 0 0 30px rgba(#C5CDE9, .5)
  width: 254px
  height 162px
  border-radius: 28px
  display: flex
  flex-direction: column
  align-items: center

.score-number
  font-family: 'D-Din condensed'
  font-size: 72px
  line-height: 120px

.progress
  background-color: #E7E8FC
  width: 190px
  height 10px

.progress-bar
  background-color: #7975FF
  height 100%

.restart-button
  background-image: linear-gradient(to right, #F75FFF, #8373FF);
  color white
  cursor: pointer
  display: block
  line-height: 44px
  width: 162px
  height: 44px
  border none
  border-radius: 22px
  box-shadow: 0 2px 4px #C5C3CD
  padding: 0
  margin 24px auto 20px

  &:hover
    background-image: linear-gradient(to top right, #9890FF, #EE80FF)
    box-shadow: none

  &:active
    background-image: linear-gradient(to top right, #625ECD, #C54BCE)
    box-shadow: none

.share-title
  font-size: 16px
  font-weight: normal
  line-height: 38px
  text-align: center
  margin-bottom: 0

.share-buttons
  display: flex
  justify-content: center

.share-button
  background none
  border none
  border-radius: 50%
  cursor pointer
  display: block
  width: 24px
  height 24px
  padding: 0

  + .share-button
    margin-left: 10px
