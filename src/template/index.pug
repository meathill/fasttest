doctype html

html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
    title= __('FastTest')
  body
    header#header
      .container
        a.navbar-brand(href="/")
          img(src=require('../assets/logo.png'))

        .lang English

    #ads

    h1= __('Test your network speed')

    include start.pug
    include testing.pug
    include result.pug

    .test-items
      dl.test-item
        each testCase in cases
          dt= testCase.title
          dd
            span.star
            span.star
            span.star
            span.star
            span.star


    footer#footer= __('Â© 2021 Fasttest. All Rights Reserved')
      small.text-muted= 'v' + version

    script(src="https://unpkg.com/axios@0.21.1/dist/axios.min.js", async)
